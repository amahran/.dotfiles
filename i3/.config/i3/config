# Graphically switch between saved moniors setup with autorandr and rofi
# bindsym $super+Shift+d exec --no-startup-id ~/.config/i3/monitor

# lock screen
bindsym $mod+l exec --no-startup-id i3lock -n -t -i $wallpaper
set $mode_system System (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id systemctl suspend, mode "default"
    bindsym h exec --no-startup-id systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $super+m mode "$mode_system"


# Open browser
bindsym $super+b exec --no-startup-id $browser
bindsym $super+e exec --no-startup-id $fileManager

# set a custom wallpaper every time i3 is (re)started
# autorandr - autodetect previosuly saved profiles based on connected monitors
exec_always --no-startup-id sh -c 'autorandr --change --force; sleep 1; feh --bg-scale $wallpaper'
# open apps at login
# for_window [class="obsidian"] move to workspace 6
exec --no-startup-id i3-msg 'workspace 1; exec $browser; workspace 1'
exec --no-startup-id i3-msg 'workspace 3; exec $terminal; workspace 1'
# exec --no-startup-id i3-msg 'workspace 6; exec obsidian'

# applications that should always be in floating mode
for_window [class="gnome-calculator"] floating enable

