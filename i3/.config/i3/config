# set super as the default modifier
set $super Mod4

# set ALT for mod key
set $mod Mod1

set $wallpaper "$HOME/wallpaper/wallhaven-3qk1xd.png"

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font xft:Noto Sans 15px

